<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wallpaper_mountain">

    <!-- Hàng đầu: Quay lại, Xóa và Sửa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <!-- Nút Quay lại, căn trái -->
        <Button
            android:id="@+id/buttonBackFromDetail"
            android:text="Quay lại"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <!-- Khoảng cách tự động giữa các nút -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Nút Xóa, căn giữa -->
        <Button
            android:id="@+id/buttonDeleteTask"
            android:text="Xóa"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <!-- Khoảng cách tự động giữa các nút -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Nút Sửa, căn phải -->
        <Button
            android:id="@+id/buttonEditTask"
            android:text="Sửa"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Tên công việc -->
    <EditText
        android:id="@+id/editTextDetailTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên công việc"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- Mô tả công việc -->
    <EditText
        android:id="@+id/editTextDetailTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả công việc"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"/>

</LinearLayout>
