<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/wallpaper_mountain" >

    <!-- Hình ảnh -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notion_logo"
        android:contentDescription="Image above EditText"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- EditText cho tài khoản (10 số) -->
    <EditText
        android:layout_gravity="center"
        android:id="@+id/edtRegisterAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tài khoản (10 số)"
        android:inputType="number"
        android:maxLength="10" />

    <!-- EditText cho mật khẩu (6 ký tự) -->
    <EditText
        android:id="@+id/edtRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu (6 ký tự)"
        android:inputType="textPassword"
        android:maxLength="6" />

    <!-- EditText cho xác nhận mật khẩu (6 ký tự) -->
    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:maxLength="6" />

    <!-- LinearLayout chứa 2 button Quay lại và Đăng ký -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Button Quay lại (trở về màn hình đăng nhập) -->
        <Button
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại" />

        <!-- Button Đăng ký -->
        <Button
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="12dp"
            android:id="@+id/btnSubmitRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

</LinearLayout>
