<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- EditText cho tài khoản (10 số) -->
    <EditText
        android:id="@+id/edtRegisterAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tài khoản (10 số)"
        android:inputType="number"
        android:maxLength="10" />

    <!-- EditText cho mật khẩu (6 ký tự) -->
    <EditText
        android:id="@+id/edtRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu (6 ký tự)"
        android:inputType="textPassword"
        android:maxLength="6" />

    <!-- EditText cho xác nhận mật khẩu (6 ký tự) -->
    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:maxLength="6" />

    <!-- LinearLayout chứa 2 button Quay lại và Đăng ký -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Button Quay lại (trở về màn hình đăng nhập) -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại" />

        <!-- Button Đăng ký -->
        <Button
            android:id="@+id/btnSubmitRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

</LinearLayout>
